<h2>Weather</h2>
<div class="weather-container">
  <div class="input-container">
    <div class="input-box">
      <img id="btn" src="https://img.icons8.com/ios/30/000000/search--v1.png" />
      <input placeholder="Search location" id="change-loc">
    </div>
  </div>
  <div class="text-wrapper">
    <div class="loc-container">
      <span id="city"></>
    </div>
    <span id="date"></>
  </div>
  <div class="container">
    <div class="left">
      <div class="weather-data">
        <div class="icon-container">
          <img id="icon" src="" alt="">
        </div>
        <div class="weather">
          <div id="temp"></div>
          <div id="desc"></div>
        </div>
      </div>
    </div>
    <div class="right">
      <div class="details">
        <div id="feels-like"></div>
        <div id="humidity"></div>
        <div id="wind"></div>
      </div>
    </div>
  </div>
</div>